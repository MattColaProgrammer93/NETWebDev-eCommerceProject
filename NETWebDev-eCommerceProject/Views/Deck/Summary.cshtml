@model IEnumerable<NETWebDev_eCommerceProject.Models.DeckAnimalViewModel>

@{
    ViewData["Title"] = "View Deck";
}

<h1>Summary</h1>

@if (Model.Count() == 0)
{
    <h2>There is nothing in your deck...</h2>
}

else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-controller="Deck" asp-action = "Remove" asp-route-id="@item.AnimalId">Remove Animal</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
}

